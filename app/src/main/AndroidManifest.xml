<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.exoplatform.android.calendar" >
  <uses-permission android:name="android.permission.INTERNET" />
  <application
    android:name="org.exoplatform.android.calendar.ExoCalendarApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name="org.exoplatform.android.calendar.ui.ManageCalendarActivity"
      android:label="@string/activity_label.calendar" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.exoplatform.android.calendar.ui.WeekViewActivity"
      android:label="Weekies" >
    </activity>
    <activity
      android:name="org.exoplatform.android.calendar.ui.DayViewActivity"
      android:label="Weekies" >
    </activity>
    <activity
      android:name="org.exoplatform.android.calendar.MainActivity"
      android:label="@string/app_name" >
    </activity>
  </application>

</manifest>
